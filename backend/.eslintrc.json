{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".ts"
        ]
      }
    }
  },
  "rules": {
    "linebreak-style": 0,
    "comma-dangle": [
      "error",
      "never"
    ],
    "object-curly-newline": 0,
    "import/extensions": 0,
    "max-len": 0,
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "import/prefer-default-export": 0,
    "arrow-body-style": 0,
    "no-await-in-loop": 0,
    "no-use-before-define": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.ts"
        ]
      }
    ]
  }
}